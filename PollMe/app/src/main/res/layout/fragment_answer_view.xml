<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/answerViewLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.juanitarouse.pollme.Views.AnswerView"
    android:weightSum="1">

    <!-- TODO: Update blank fragment layout -->
    <EditText
        android:id="@+id/editQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:layout_marginBottom="20dp"
        android:contentDescription="Write Question"
        android:maxLines="3"
        android:ems="10"
        android:hint="Question"
        android:inputType="textMultiLine"
        android:textAlignment="center"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/editAnswer1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/editText"
        android:layout_marginTop="50dp"
        android:layout_weight="0.02"
        android:ems="10"
        android:hint="Insert Answer 1"
        android:inputType="textMultiLine"
        android:maxLines="3"
        android:textAlignment="center"
        android:textColor="?android:attr/textColorPrimary"/>

    <EditText
        android:id="@+id/editAnswer2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/editAnswer1"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="Insert Answer 2"
        android:inputType="textMultiLine"
        android:maxLines="3"
        android:textAlignment="center"
        android:layout_weight="0.02"
        android:textColor="?android:attr/textColorPrimary"/>

    <EditText
        android:id="@+id/editAnswer3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/editAnswer2"
        android:layout_marginTop="50dp"
        android:layout_weight="0.02"
        android:ems="10"
        android:hint="Insert Answer 3"
        android:inputType="textMultiLine"
        android:maxLines="3"
        android:layout_marginBottom="30dp"
        android:textAlignment="center"
        android:textColor="?android:attr/textColorPrimary"/>

    <Button
        android:id="@+id/addAnswer"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:onClick="addQuestionToReal"
        android:layout_marginLeft="100dp"
        android:text="Done"
        android:textAlignment="center" />


</LinearLayout>
